<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Search</title>
    <link rel="stylesheet" href="/styles/basicStyles.css" />
  </head>
  <body>
    <main>
      <h1>Search persons</h1>
      <form action="/search" method="POST">
        <div id="options">
          <label>Choose key:</label>
          <select name="key">
            <% keys.forEach(key => { %>
            <option value="<%= key %>"><%= key %></option>
            <% }); %>
          </select>
          <label>Value: <input type="text" name="searchvalue" /></label>
          <button type="submit">Submit</button>
        </div>
      </form>
      <a href="/"><button>Menu</button></a>
    </main>
  </body>
</html>
